<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/back"
            android:layout_width="100dp"
            android:layout_height="42dp"
            app:srcCompat="@drawable/back"
            android:layout_gravity="right"/>

        <TextView
            android:layout_width="352dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/blackout_1"
            android:foregroundTint="@color/colorPrimary"
            android:text="Indoor Sports Centre"
            android:textColor="#FFFFFF"
            android:textSize="35sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/venues_background"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/blackout_1"
                    android:foregroundTint="@color/colorPrimary"
                    android:text="Contact Information"
                    android:textColor="#A2A1A3"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/contact"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="30dp"
                    android:paddingBottom="10dp"
                    app:srcCompat="@drawable/contact" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/information_background"
                android:layout_marginStart="3dp"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="14dp"
                android:layout_marginBottom="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="3dp"
                    android:layout_marginTop="3dp"
                    android:fontFamily="@font/blackout_1"
                    android:foregroundTint="@color/colorPrimary"
                    android:text="Phone: 0117 428 3200"
                    android:textColor="#A2A1A3"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="3dp"
                    android:layout_marginTop="3dp"
                    android:fontFamily="@font/blackout_1"
                    android:foregroundTint="@color/colorPrimary"
                    android:text="Email: isc@bristol.ac.uk"
                    android:textColor="#A2A1A3"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="3dp"
                    android:layout_marginTop="3dp"
                    android:fontFamily="@font/blackout_1"
                    android:foregroundTint="@color/colorPrimary"
                    android:text="Facebook:"
                    android:textColor="#A2A1A3"
                    android:textSize="14sp" />


            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/blackout_1"
                    android:foregroundTint="@color/colorPrimary"
                    android:text="Opening Times"
                    android:textColor="#A2A1A3"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/time"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="30dp"
                    android:paddingBottom="10dp"
                    app:srcCompat="@drawable/time" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/information_background"
                android:layout_marginStart="37dp"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="14dp"
                android:layout_marginBottom="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="3dp"
                    android:layout_marginTop="3dp"
                    android:fontFamily="@font/blackout_1"
                    android:foregroundTint="@color/colorPrimary"
                    android:text="Mon - Thu: 7:00 - 21:00"
                    android:textColor="#A2A1A3"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="3dp"
                    android:layout_marginTop="3dp"
                    android:fontFamily="@font/blackout_1"
                    android:foregroundTint="@color/colorPrimary"
                    android:text="Fri: 9:00 - 21:00"
                    android:textColor="#A2A1A3"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="3dp"
                    android:layout_marginTop="3dp"
                    android:fontFamily="@font/blackout_1"
                    android:foregroundTint="@color/colorPrimary"
                    android:text="Sat: 9:00 - 17:00"
                    android:textColor="#A2A1A3"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="3dp"
                    android:layout_marginTop="3dp"
                    android:fontFamily="@font/blackout_1"
                    android:foregroundTint="@color/colorPrimary"
                    android:text="Sun: 9:00 - 15:00"
                    android:textColor="#A2A1A3"
                    android:textSize="14sp" />


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/blackout_1"
                    android:foregroundTint="@color/colorPrimary"
                    android:text="Location"
                    android:textColor="#A2A1A3"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/location_png"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="30dp"
                    android:paddingBottom="10dp"
                    app:srcCompat="@drawable/location" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/information_background"
                android:layout_marginStart="77dp"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="14dp"
                android:layout_marginBottom="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="3dp"
                    android:layout_marginTop="3dp"
                    android:fontFamily="@font/blackout_1"
                    android:foregroundTint="@color/colorPrimary"
                    android:text="Tyndall Avenue"
                    android:textColor="#A2A1A3"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="3dp"
                    android:layout_marginTop="3dp"
                    android:fontFamily="@font/blackout_1"
                    android:foregroundTint="@color/colorPrimary"
                    android:text="Bristol"
                    android:textColor="#A2A1A3"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="3dp"
                    android:layout_marginTop="3dp"
                    android:fontFamily="@font/blackout_1"
                    android:foregroundTint="@color/colorPrimary"
                    android:text="BS8 1TP"
                    android:textColor="#A2A1A3"
                    android:textSize="14sp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/information_background"
                android:layout_marginStart="30dp"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="3dp"
                    android:layout_marginTop="3dp"
                    android:fontFamily="@font/blackout_1"
                    android:foregroundTint="@color/colorPrimary"
                    android:text="Gym"
                    android:textColor="#A2A1A3"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="3dp"
                    android:layout_marginTop="3dp"
                    android:fontFamily="@font/blackout_1"
                    android:foregroundTint="@color/colorPrimary"
                    android:text="Indoor Training Facilities"
                    android:textColor="#A2A1A3"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="3dp"
                    android:layout_marginTop="3dp"
                    android:fontFamily="@font/blackout_1"
                    android:foregroundTint="@color/colorPrimary"
                    android:text="Sports Hall"
                    android:textColor="#A2A1A3"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="3dp"
                    android:layout_marginTop="3dp"
                    android:fontFamily="@font/blackout_1"
                    android:foregroundTint="@color/colorPrimary"
                    android:text="Changing Rooms"
                    android:textColor="#A2A1A3"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/map"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:paddingBottom="10dp"
                    app:srcCompat="@drawable/map" />

                <ImageView
                    android:id="@+id/tyndallmap"
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:paddingBottom="10dp"
                    app:srcCompat="@drawable/tyndall_location" />

            </LinearLayout>

        </LinearLayout>



    </LinearLayout>




</LinearLayout>