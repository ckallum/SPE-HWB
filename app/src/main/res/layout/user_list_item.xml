<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/round_border_text">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="vertical"
            android:paddingStart="0dp">
            <TextView
                android:id="@+id/list_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Name"/>
            <TextView
                android:id="@+id/list_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Date"/>
            <TextView
                android:id="@+id/list_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Time Start - Time End"/>
            <TextView
                android:id="@+id/list_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Venue"/>
        </LinearLayout>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/list_spaces"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Spaces"/>
            <TextView
                android:id="@+id/list_interested"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Interested"/>
            <TextView
                android:id="@+id/list_attendees"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Attendees"/>
        </LinearLayout>
    </LinearLayout>
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:paddingEnd="50dp">

        <Button
            android:id="@+id/button_unsubscribe"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:background="@drawable/button"
            android:text="@string/unsubscribe"


            android:textColor="#FFFFFF" />
    </FrameLayout>
    <!--    <View-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="1dp"-->
    <!--        android:background="@drawable/separator"/>-->
</LinearLayout>